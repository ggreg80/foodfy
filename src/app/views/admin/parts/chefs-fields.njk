<div class="item">
    <div>Nome</div>
    <div>
        <input type="text" name="name" value="{{chef.name}}">
    </div>
</div>

<div class="item">
    <div>Avatar</div>
    <div id="photos-container">
        <div id="photos-upload">
            <input 
                id="photos-input"
                type="file"
                name="photos"
                accept="images/*"
                onchange="PhotosUpload.handleFileInput(event, 1)"
            >
            <i class="material-icons">add</i>
        </div>
        <div id="photos-preview"></div>
    </div>
</div>