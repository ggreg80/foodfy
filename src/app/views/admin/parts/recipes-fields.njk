<div class="item">
    <div>Imagens da receita (até 05 fotos)</div>
    <div id="photos-container">
        <div id="photos-upload">
            <input
                id="photos-input"
                type="file"
                name="photos"
                multiple
                accept="image/*"
                {% if files %}
                {% else %}
                    required
                {% endif %}
                onchange="PhotosUpload.handleFileInput(event, 5)"
            >
            <i class="material-icons">add</i>
        </div>
        <div id="photos-preview">
            {% if files %}
                {% for image in files%}
                    <div class="photo" id="{{image.file_id}}">
                        <img src="{{image.src}}" alt="{{image.name}}">
                        <i
                            class="material-icons"
                            onclick="PhotosUpload.removeOldPhoto(event)"
                        >close</i>
                    </div>
                {% endfor %}
                <input type="hidden" name="removed_files">
            {% endif %}
        </div>
    </div>
</div>

<div class="item">
    <div>Nome da receita</div>
    <div>
        <input
            type="text"
            name="title"
            required
            value="{{recipe.title}}"
        >
    </div>
</div>

<div class="item">
    <div>Chef</div>
    <div>
        <select name="chef" required>
            <option disabled selected value>Selecione um chef</option>
            {% for chef in chefsOptions %}
                <option
                    value="{{chef.id}}"
                    {% if recipe.chef_id == chef.id %}
                        selected="selected"
                    {% endif %}
                >{{chef.name}}</option>
            {% endfor %}
        </select>
    </div>
</div>

<div class="item" id="ingredients">
    <div>Igredientes</div>
    {% for ingredient in recipe.ingredients %}
        <div class="ingredients">
            <input
                type="text"
                name="ingredients[]"
                required
                value="{{ingredient}}"
            >
        </div>
    {% else %}
        <div class="ingredients">
            <input
                type="text"
                name="ingredients[]"
                required
            >
        </div>
    {% endfor %}
</div>

<a class="add-ingredient add">Adicionar novo ingrediente</a>

<div class="item" id="step">
    <div>Modo de preparo</div>
    {% for preparation in recipe.preparation %}
        <div class="steps">
            <input
                type="text"
                name="preparation[]"
                required
                value="{{preparation}}"
            >
        </div>
    {% else %}
        <div class="steps">
            <input
                type="text"
                name="preparation[]"
                required
            >
        </div>
    {% endfor %}
</div>

<a class="add-step add">Adicionar novo passo</a>

<div class="item">
    <div>informações adicionais</div>
    <div>
        <textarea name="information" required>{{recipe.information}}</textarea>
    </div>
</div>